<div class="content">
    {% for index in stats %}
        <h2 style="width: 100%;">
            {{ index.name }}
            <span class="light">&ndash; {{ index.site.name }}</span>&nbsp;
            <span class="light">&ndash; </span><small class="light">{{ index.elementType }}</small>
        </h2>
        <table class="data fullwidth fixed-layout">
            <tbody>
            <tr>
                <th class="light">Elements in Craft</th>
                <td>{{ index.elements }}</td>
            </tr>
            <tr>
                <th class="light">Records in Index</th>
                <td>{{ index.indexed }}</td>
            </tr>
            <tr>
                <th class="light">
                    Actions<br>
                    <small style="font-weight: normal;">These can take a while to process.</small>
                </th>
                <td>
                    <div style="display: flex; justify-content: left; flex-wrap: wrap;">
                        {% include 'scoutbase/_partials/action' with {
                            action: {
                                name: 'Refresh' | t('scoutbase'),
                                slug: 'refresh',
                                index: index.name
                            }
                        } %}
                        &nbsp;
                        {% include 'scoutbase/_partials/action' with {
                            action: {
                                name: 'Import' | t('scoutbase'),
                                slug: 'import',
                                index: index.name
                            }
                        } %}
                        &nbsp;
                        {% include 'scoutbase/_partials/action' with {
                            action: {
                                name: 'Flush' | t('scoutbase'),
                                slug: 'flush',
                                index: index.name
                            }
                        } %}
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    {% endfor %}
</div>
